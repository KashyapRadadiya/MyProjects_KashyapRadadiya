<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/aboutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="             About\nCollege Companion"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/aboutContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="College Companion is an all-in-one app for students and faculty to manage timetables, attendance, exams, notices, assignments, and materials.\n\nDeveloped by:\n- Kashyap Radadiya \n\nFor:\n- MAD Subject of B.E. \n\nVersion: 1.7.0"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>